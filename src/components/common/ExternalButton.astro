---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface ExternalButtonProps {
  href: string;
  text: string;
  icon: AstroComponentFactory;
}

const { href, text, icon: Icon } = Astro.props as ExternalButtonProps;
---

<div class="flex w-full items-center justify-center">
  <a
    href={href}
    class="bg-moody-blue-700 border-1 border-solid text-white px-6 py-3 rounded-full w-full hover:bg-white hover:text-moody-blue-700 hover:scale-105 transition-all"
    target="_blank"
    rel="noopener noreferrer"
  >
    <span class="font-semibold flex gap-2 items-center justify-center text-lg">
      {text}
      <Icon />
    </span>
  </a>
</div>
