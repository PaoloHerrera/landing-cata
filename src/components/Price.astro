---
import PriceCard from "./ui/PriceCard.astro";
---

<section class="bg-white flex flex-col justify-center h-full" id="valor">
  <div
    class="flex flex-col gap-6 py-20 items-center max-w-7xl px-4 md:px-8 mx-auto"
  >
    <div>
      <h1 class="text-3xl font-bold text-center">Valor de la consulta</h1>
      <p class="text-center text-gray-800">
        Horarios flexibles y adaptables a tu rutina familiar
      </p>
    </div>
    <PriceCard
      price="21990"
      salePrice="15000"
      disponibility="Lunes, Miércoles, Viernes y Sábado"
      hours="10:00 - 18:00"
      payment="Pago con tarjeta o transferencia"
      duration="45"
    />
  </div>
</section>
